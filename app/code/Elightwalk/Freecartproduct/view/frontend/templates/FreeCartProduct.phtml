		<?php $productImage = $this->helper('Magento\Catalog\Helper\Image')->init($_product, 'product_small_image'); ?>
		<div class="freecart-product">
			<?php if(!empty($productTitle)) : ?>
				<div class="block-title title">
					<strong role="heading"><?php echo $productTitle; ?></strong>
				</div>
			<?php endif; ?>
			<div class="product-item-info">
				<a class="product photo product-item-photo" href="<?php echo $_product->getProductUrl(); ?>">
					<span class="product-image-container" style="width:152px;">
