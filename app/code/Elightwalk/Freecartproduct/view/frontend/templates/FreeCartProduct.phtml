<?php $currentProduct = $block->getCurrentProduct(); ?>
<?php if($currentProduct->getFreeproductAttribute()) : ?>
	<?php $skuEntered   = $this->helper('Elightwalk\Freecartproduct\Helper\Data')->getConfig('freecart/general/freeproduct_sku'); ?>
	<?php $productTitle = $this->helper('Elightwalk\Freecartproduct\Helper\Data')->getConfig('freecart/general/freeproduct_heading'); ?>
	<?php if(!empty($skuEntered) && !empty($block->freeProductData($skuEntered))) : ?>
